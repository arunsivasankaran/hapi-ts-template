{
    "compilerOptions": {
        "strictNullChecks": true,
        "outDir": "./build",
        "lib": ["ES2018"],
        "module": "commonjs",
        "target": "ES2018",
        "sourceMap": true,
        "noErrorTruncation": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "incremental": true,
        "pretty": true,
    },
    "exclude": ["node_modules"],
}
